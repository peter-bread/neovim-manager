  if [[ -n "$long_usage" ]]; then
    printf "%s\n" "Options:"

    printf "  %s\n" "--help, -h"
    printf "    Show this help\n"
    echo

    printf "%s\n" "Arguments:"

    printf "  %s\n" "BUILD"
    printf "\n"
    printf "    %s\n" "Allowed: stable, nightly, all"
    printf "    %s\n" "Default: stable"
    echo

    printf "%s\n" "Examples:"
    printf "  neovim-manager i\n"
    printf "  neovim manager install nightly\n"
    echo

  fi
}

